# エディタ設定テンプレート
# -------------------------------------------------------
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
max_line_length = 120
trim_trailing_whitespace = true
insert_final_newline = true

# Python: PEP8 遵守の設定
[*.py]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8
max_line_length = 79

# Makefileの設定
[Makefile]
indent_style = tab
indent_size = 4

# Markdownに対する設定
[*.md]
indent_size = 4
max_line_length = 0
trim_trailing_whitespace = false
